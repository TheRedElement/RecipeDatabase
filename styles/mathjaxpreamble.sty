\newcommand{\minbetweenh}[2][minbetweenLS]{\Bigg|\textcolor{#1}{#2}\Bigg|}  %to provide in-between comments/calculations within calculations in a horizontal layout
\newcommand{\minbetweenv}[2][minbetweenLS]{%
    \hspace{0.5em}\left|\begin{array}{ll}
        \textcolor{#1}{#2}
    \end{array}
    \right.
}
\newcommand{\minbetweenvfollows}[2][minbetweenLS]{%                                %to provide in-between comments/calculations within calculationss in vertical layout
    \hspace{0.3em}\left\Downarrow\begin{array}{ll}
        \textcolor{#1}{#2}
    \end{array}
    \right.
    \nonumber
}
